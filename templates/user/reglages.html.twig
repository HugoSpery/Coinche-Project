{% block title %}Page d'accueil{% endblock %}

{% block body %}
    {% include 'menu.html.twig' %}
    <div class="container">
        {% for type,message in app.flashes %}
            <div class="alert alert-{{ type }}">
                {{ message | join('. ') }}
            </div>
        {% endfor %}
        <h1 class="title-home">Réglages</h1>
        <!-- Icônes des symboles de cartes (Trèfle, Cœur, Pique, Carreau) -->

        <!-- Boutons avec icônes Font Awesome -->
        <a href="/create/party" class="button"><i class="fas fa-play-circle"></i>Créer une partie</a>
        <a href="/search/party" class="button"><i class="fas fa-user-plus"></i>Rejoindre une partie</a>
        <a href="/find/party" class="button"><i class="fas fa-search"></i>Trouver une partie</a>
    </div>




{% endblock %}